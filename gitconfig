[core]
  pager = less -FRSX
  excludesfile = ~/.gitignore
  editor = vim

[alias]
  co = checkout
  cm = commit
  rb = rebase
  br = branch
  df = diff --color
  fd = diff --name-only
  st = status
  cp = cherry-pick
  hist = log --all --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
  brs = log --branches --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lol = log --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s' HEAD origin/master
  lv = log --oneline --decorate --graph --simplify-by-decoration
  untracked = ls-files --others --exclude-standard
  amend = commit --amend
  note = branch --edit-description
  info = status --porcelain -b
  yolo = !git commit -m \"[yolo] $(curl -s whatthecommit.com/index.txt)\"
  dst = diff --staged
  shf = diff-tree --no-commit-id --name-only -r
  dup = diff @{upstream}
  local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
  au = add -u
  sm = submodule

[merge]
  tool = vimdiff

[push]
	default = current

[gc]
  auto = 256
  pruneExpire = now

[color]
  ui = true

[color "diff"]
  old = red bold
  new = green bold
  meta = white reverse

[color "status"]
  added = green bold
  changed = red bold
  untracked = magenta bold
  branch = bold
  nobranch = red bold

[color "branch"]
  current = green
  remote = red bold

[color "interactive"]
  prompt = yellow bold
  help = white

